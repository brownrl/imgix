<?php

use Imgix\UrlBuilder;

/**
 * Implements hook_menu().
 */
function imgix_menu() {
  $items['admin/config/services/imgix'] = array(
    'title' => t('Imgix settings'),
    'description' => t('Administration page to setup Imgix integration.'),
    'page callback' => 'drupal_get_form',
    'page arguments' => array('imgix_admin'),
    'access arguments' => array('administer imgix settings'),
    'type' => MENU_NORMAL_ITEM,
  );

  return $items;
}

/**
 * Settings page callback.
 */
function imgix_admin() {
  $form = array();

  $form['imgix_domain'] = array(
    '#type' => 'textfield',
    '#title' => t('Domain'),
    '#required' => TRUE,
    '#default_value' => variable_get('imgix_domain'),
  );

  $form['imgix_mapping'] = array(
    '#type' => 'radios',
    '#title' => t('Mapping'),
    '#options' => array(
      'webfolder' => 'Web Folder',
      'webproxy' => 'Web Proxy'
    ),
    '#required' => TRUE,
    '#default_value' => variable_get('imgix_mapping', 'webfolder'),
  );

  $form['imgix_secure_url'] = array(
    '#type' => 'checkbox',
    '#title' => t('Secure URL'),
    '#default_value' => variable_get('imgix_secure_url', FALSE),
  );

  $form['imgix_secure_url_token'] = array(
    '#type' => 'textfield',
    '#title' => t('Secure URL Token'),
    '#default_value' => variable_get('imgix_secure_url_token'),
    '#required' => TRUE,
    '#states' => array(
      'visible' => array(
        ':input[name="imgix_secure_url"]' => array('checked' => TRUE),
      ),
    ),
  );

  return system_settings_form($form);
}
